{
  "info": {
    "name": "Store1 E-commerce API",
    "description": "Complete API collection for Store1 e-commerce platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost/Store1",
      "type": "string"
    }
  ],
  "auth": {
    "type": "noauth"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "User Registration",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "f_name",
                  "value": "John",
                  "type": "text"
                },
                {
                  "key": "l_name",
                  "value": "Doe",
                  "type": "text"
                },
                {
                  "key": "email",
                  "value": "john.doe@example.com",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "password123",
                  "type": "text"
                },
                {
                  "key": "birthdate",
                  "value": "1990-01-01",
                  "type": "text"
                },
                {
                  "key": "phone_no",
                  "value": "+1234567890",
                  "type": "text"
                },
                {
                  "key": "gender",
                  "value": "male",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/reg.php",
              "host": ["{{base_url}}"],
              "path": ["reg.php"]
            }
          }
        },
        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "email",
                  "value": "john.doe@example.com",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "password123",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/login.php",
              "host": ["{{base_url}}"],
              "path": ["login.php"]
            }
          }
        },
        {
          "name": "Get User Data",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/get_user_data.php",
              "host": ["{{base_url}}"],
              "path": ["get_user_data.php"]
            }
          }
        },
        {
          "name": "Dashboard Data",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/dashboard",
              "host": ["{{base_url}}"],
              "path": ["dashboard"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/get_product.php",
              "host": ["{{base_url}}"],
              "path": ["get_product.php"]
            }
          }
        },
        {
          "name": "Get Product Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/get_product_details.php?id=1",
              "host": ["{{base_url}}"],
              "path": ["get_product_details.php"],
              "query": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Design Products (Alternative)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/desgin/get_product.php",
              "host": ["{{base_url}}"],
              "path": ["desgin", "get_product.php"]
            }
          }
        }
      ]
    },
    {
      "name": "Cart Operations",
      "item": [
        {
          "name": "Get Cart Items",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/cart.php",
              "host": ["{{base_url}}"],
              "path": ["cart.php"]
            }
          }
        },
        {
          "name": "Add Item to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"product_id\": 1,\n  \"quantity\": 2\n}"
            },
            "url": {
              "raw": "{{base_url}}/cart.php",
              "host": ["{{base_url}}"],
              "path": ["cart.php"]
            }
          }
        },
        {
          "name": "Update Cart Item Quantity",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cart_item_id\": 1,\n  \"quantity\": 3\n}"
            },
            "url": {
              "raw": "{{base_url}}/cart.php",
              "host": ["{{base_url}}"],
              "path": ["cart.php"]
            }
          }
        },
        {
          "name": "Remove Item from Cart",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cart_item_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/cart.php",
              "host": ["{{base_url}}"],
              "path": ["cart.php"]
            }
          }
        }
      ]
    },
    {
      "name": "Wishlist Operations",
      "item": [
        {
          "name": "Get Wishlist Items",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/wishlist.php?user_id=1",
              "host": ["{{base_url}}"],
              "path": ["wishlist.php"],
              "query": [
                {
                  "key": "user_id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Add Item to Wishlist",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": 1,\n  \"product_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/wishlist.php",
              "host": ["{{base_url}}"],
              "path": ["wishlist.php"]
            }
          }
        },
        {
          "name": "Remove Item from Wishlist",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": 1,\n  \"wishlist_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/wishlist.php",
              "host": ["{{base_url}}"],
              "path": ["wishlist.php"]
            }
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "Get Product Comments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/comments.php?product_id=1",
              "host": ["{{base_url}}"],
              "path": ["comments.php"],
              "query": [
                {
                  "key": "product_id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Add Product Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"product_id\": 1,\n  \"comment\": \"Great product! Highly recommended.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/comments.php",
              "host": ["{{base_url}}"],
              "path": ["comments.php"]
            }
          }
        }
      ]
    },
    {
      "name": "Profile",
      "item": [
        {
          "name": "Update Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"f_name\": \"John\",\n  \"l_name\": \"Doe\",\n  \"birthdate\": \"1990-01-01\",\n  \"phone_no\": \"+1234567890\",\n  \"gender\": \"male\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/update_profile.php",
              "host": ["{{base_url}}"],
              "path": ["update_profile.php"]
            }
          }
        }
      ]
    }
  ]
} 